{
  "packageRules": [
    {
      "description": "Auto merge container digests",
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchUpdateTypes": [
        "digest"
      ],
      "matchPackagePattern": [
        "ghcr.io/onedr0p",
        "ghcr.io/bjw-s",
        "ghcr.io/auricom"
      ],
      "schedule": [
        "between 2am and 5am"
      ],
      "stabilityDays": 3
    },
    {
      "description": "Auto merge GitHub Actions",
      "matchDatasources": [
        "github-tags"
      ],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "lycheeverse/lychee-action",
        "renovatebot/github-action"
      ],
      "schedule": [
        "before 6am on saturday"
      ],
      "stabilityDays": 3
    },
    {
      "matchDatasources": [
        "docker",
        "github-actions",
        "github-releases",
        "github-tags",
        "helm"
      ],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "ghcr.io/onedr0p/jackett",
        "ghcr.io/onedr0p/lidarr",
        "ghcr.io/onedr0p/prowlarr-nightly",
        "ghcr.io/onedr0p/qbittorrent",
        "ghcr.io/onedr0p/radarr",
        "ghcr.io/onedr0p/readarr",
        "ghcr.io/onedr0p/recyclarr",
        "ghcr.io/onedr0p/lidarr",
        "ghcr.io/onedr0p/sabnzbd",
        "ghcr.io/onedr0p/sonarr",
        "ghcr.io/onedr0p/plex",
        "renovatebot/github-action"
      ],
      "schedule": [
        "every saturday between 2am and 5am"
      ],
      "stabilityDays": 3
    },
    // Automerge game servers immediately
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": false,
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "Game Servers",
      "labels": [
        "automerge-servers"
      ],
      "matchPackageNames": [
        "factoriotools/factorio",
        "wolveix/satisfactory-server"
      ]
    }
  ]
}
